{
  "info": {
    "name": "Library Card API",
    "description": "API cho hệ thống quản lý thẻ thư viện JavaCard",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "studentId",
      "value": "2021600001",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Cards",
      "item": [
        {
          "name": "Create Card",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"studentId\": \"2021600001\",\n  \"holderName\": \"Nguyễn Văn A\",\n  \"email\": \"nguyenvana@example.com\",\n  \"department\": \"Công nghệ thông tin\",\n  \"birthDate\": \"01/01/2000\",\n  \"address\": \"123 Đường ABC, TP.HCM\",\n  \"pin\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cards",
              "host": ["{{baseUrl}}"],
              "path": ["cards"]
            }
          }
        },
        {
          "name": "Get Card by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/cards/{{studentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["cards", "{{studentId}}"]
            }
          }
        },
        {
          "name": "Get All Cards",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/cards",
              "host": ["{{baseUrl}}"],
              "path": ["cards"]
            }
          }
        },
        {
          "name": "Update Card",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newemail@example.com\",\n  \"address\": \"Địa chỉ mới\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cards/{{studentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["cards", "{{studentId}}"]
            }
          }
        },
        {
          "name": "Update Balance",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 100000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cards/{{studentId}}/balance",
              "host": ["{{baseUrl}}"],
              "path": ["cards", "{{studentId}}", "balance"]
            }
          }
        },
        {
          "name": "Delete Card",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/cards/{{studentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["cards", "{{studentId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "PIN",
      "item": [
        {
          "name": "Verify PIN",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"studentId\": \"{{studentId}}\",\n  \"pin\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/pin/verify",
              "host": ["{{baseUrl}}"],
              "path": ["pin", "verify"]
            }
          }
        },
        {
          "name": "Change PIN",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"studentId\": \"{{studentId}}\",\n  \"oldPin\": \"123456\",\n  \"newPin\": \"654321\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/pin/change",
              "host": ["{{baseUrl}}"],
              "path": ["pin", "change"]
            }
          }
        },
        {
          "name": "Get PIN Tries",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/pin/tries/{{studentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["pin", "tries", "{{studentId}}"]
            }
          }
        },
        {
          "name": "Reset PIN Tries",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/pin/reset/{{studentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["pin", "reset", "{{studentId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Books",
      "item": [
        {
          "name": "Borrow Book",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"studentId\": \"{{studentId}}\",\n  \"bookId\": \"BOOK001\",\n  \"bookName\": \"Lập trình Java căn bản\",\n  \"dueDate\": \"2024-02-15\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/books/borrow",
              "host": ["{{baseUrl}}"],
              "path": ["books", "borrow"]
            }
          }
        },
        {
          "name": "Get Student Books",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/books/student/{{studentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["books", "student", "{{studentId}}"]
            }
          }
        },
        {
          "name": "Get All Books",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/books",
              "host": ["{{baseUrl}}"],
              "path": ["books"]
            }
          }
        }
      ]
    },
    {
      "name": "Transactions",
      "item": [
        {
          "name": "Create Transaction - Deposit",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"studentId\": \"{{studentId}}\",\n  \"type\": \"Nạp tiền\",\n  \"amount\": 100000,\n  \"description\": \"Nạp tiền vào thẻ\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/transactions",
              "host": ["{{baseUrl}}"],
              "path": ["transactions"]
            }
          }
        },
        {
          "name": "Get Student Transactions",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/transactions/student/{{studentId}}",
              "host": ["{{baseUrl}}"],
              "path": ["transactions", "student", "{{studentId}}"]
            }
          }
        },
        {
          "name": "Get Transaction Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/transactions/student/{{studentId}}/stats",
              "host": ["{{baseUrl}}"],
              "path": ["transactions", "student", "{{studentId}}", "stats"]
            }
          }
        }
      ]
    }
  ]
}



